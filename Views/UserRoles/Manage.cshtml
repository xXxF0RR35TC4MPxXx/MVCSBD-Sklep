@using MVCSBD_Sklep.Models
@model List<ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Role użytkownika @ViewBag.UserName</h4>
            <hr />
   
            @for (int i = 0; i < Model.Count; i++)
            { 
                <div class="form-group">
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model[i].RoleId)
                            @Html.HiddenFor(model => model[i].RoleName)
                            @Html.EditorFor(model => model[i].Selected)
                            @Html.ValidationMessageFor(model => model[i].Selected, "", new { @class = "text-danger" })
                            <label class="form-check-label" asp-for="@Model[i].Selected">
                                @Model[i].RoleName
                            </label>
                        </div>
                    </div>
                </div>
            }
        



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}